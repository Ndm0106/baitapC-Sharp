<Window x:Class="NguyenDinhManh_690.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenDinhManh_690"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataTim" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã danh mục" Binding="{Binding MaDm}"/>
                <DataGridTextColumn Header="Tên danh mục" Binding="{Binding TenDm}"/>
                <DataGridTextColumn Header="Tổng số tiền" Binding="{Binding TongSoTien,StringFormat={}{0:N0}}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
