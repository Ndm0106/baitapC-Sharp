<Window x:Class="Bai_KTHP.ThongKe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai_KTHP"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ThongKe" Height="450" Width="800">
    <Grid>
        <DataGrid Margin="20" x:Name="dataThongKe" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã lớp" Binding="{Binding MaLop}"/>
                <DataGridTextColumn Header="Tên lớp" Binding="{Binding TenLop}"/>
                <DataGridTextColumn Header="Số học sinh nữ" Binding="{Binding SoHocSinhNu}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
